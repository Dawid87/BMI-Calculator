<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.dawid.dawiddelimata.bmicalculator_ver14.MainActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dawid.dawiddelimata.bmicalculator_ver14.MainActivity"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="0dp">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            ads:srcCompat="@drawable/bg"
            android:gravity="center"
            android:alpha="0.95"
            android:scaleType="fitXY"/>

        <ScrollView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            xmlns:android="http://schemas.android.com/apk/res/android">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar">

                </include>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="14dp"
                    app:srcCompat="@drawable/heightt"
                    android:layout_below="@+id/toolbar"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="21dp"
                    android:layout_marginEnd="21dp" />

                <EditText
                    android:id="@+id/heightInput"
                    android:layout_width="184dp"
                    android:layout_height="54dp"
                    android:layout_above="@+id/imageView2"
                    android:layout_alignStart="@+id/bmiCat"
                    android:layout_marginStart="24dp"
                    android:ems="10"
                    android:hint="Height"
                    android:imeOptions="actionSend"
                    android:inputType="numberDecimal"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/weight"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/imageView"
                    android:layout_alignEnd="@+id/imageView"
                    android:layout_alignRight="@+id/imageView" />

                <EditText
                    android:id="@+id/weightInput"
                    android:layout_width="184dp"
                    android:layout_height="54dp"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_alignStart="@+id/heightInput"
                    android:ems="10"
                    android:hint="Weight"
                    android:imeOptions="actionSend"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/colorFont"
                    tools:ignore="RtlCompat" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bmiSum"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="11dp"
                    app:srcCompat="@drawable/button2"
                    android:background="@color/colorCustom2"
                     />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="98dp"
                    app:srcCompat="@drawable/body_man"
                    android:layout_below="@+id/imageView2"
                    android:layout_alignLeft="@+id/imageView2"
                    android:layout_alignStart="@+id/imageView2" />

                <EditText
                    android:id="@+id/bmiSum"
                    android:layout_width="184dp"
                    android:layout_height="54dp"
                    android:layout_alignLeft="@+id/weightInput"
                    android:layout_alignStart="@+id/weightInput"
                    android:layout_alignTop="@+id/imageView3"
                    android:ems="10"
                    android:hint="Your BMI"
                    android:imeOptions="actionSend"
                    android:inputType="numberDecimal"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/bmiCat"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:text="......."
                    android:layout_below="@+id/imageView3"
                    android:layout_centerHorizontal="true"
                    android:imeOptions="actionSend"/>


                <ImageView
                    android:padding="10dp"
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="312dp"
                    ads:srcCompat="@drawable/bmi_cats"
                    android:layout_marginTop="104dp"
                    android:alpha="0.80"
                    android:layout_below="@+id/imageButton"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />




            </RelativeLayout>
        </ScrollView>

        <com.google.android.gms.ads.AdView
            android:layout_marginTop="3dp"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1989255292557669/7509769377"></com.google.android.gms.ads.AdView>
    </RelativeLayout>



</RelativeLayout>
